<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_item_stt_xe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số thứ tự xe"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_item_thoi_gian_vi_pham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vi phạm vào lúc: 19/7/2019" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tại vị trí: " />

        <TextView
            android:textColor="@color/blue"
            android:id="@+id/tv_item_vi_tri_vi_pham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11.1000000;105.02392343" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Lỗi: " />

        <TextView
            android:id="@+id/tv_item_loi_vi_pham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vượt ra khỏi khuôn viên trường đại học" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_item_hinh_thuc_xu_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chưa xử phạt hành chính" />
</LinearLayout>