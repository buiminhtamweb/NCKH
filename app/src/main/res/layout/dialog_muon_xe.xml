<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/white_smoke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đang chọn xe số"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_stt_xe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="30sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:id="@+id/btn_muon_xe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mượn xe"
            android:textColor="@color/white"
            android:background="@drawable/backround_button" />

        <Button
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:id="@+id/btn_chi_duong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉ đường đến đây"
            android:textColor="@color/white"
            android:background="@drawable/backround_button" />
    </LinearLayout>

    <Button
        android:layout_margin="4dp"
        android:id="@+id/btn_huy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:textColor="@color/design_default_color_primary_dark"
        android:background="@drawable/backround_edittext" />
